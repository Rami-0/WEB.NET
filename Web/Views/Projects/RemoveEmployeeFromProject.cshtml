@using DAL.Models
@model List<Employee> 

<h1>Remove Employee from Project</h1>

<form asp-controller="Projects" asp-action="RemoveEmployee" method="post">
    <input type="hidden" :asp-for="ProjectId" value="@Model.First().ProjectId" />
    <div class="form-group">
        <label for="EmployeeId">Select an Employee to Remove:</label>
        <select :asp-for="EmployeeId" class="form-control">
            <option value="">-- Select Employee --</option>
            @foreach (var employee in Model)
            {
                <option value="@employee.EmployeeId">@employee.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-danger">Remove Employee</button>
</form>