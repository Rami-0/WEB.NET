@model DAL.Models.Employee

<h1>Delete Employee</h1>

<p>Are you sure you want to delete this employee?</p>

<dl class="row">
    <dt class="col-sm-2">Name:</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Surname:</dt>
    <dd class="col-sm-10">@Model.Surname</dd>

    <dt class="col-sm-2">Patronymic:</dt>
    <dd class="col-sm-10">@Model.Patronymic</dd>

    <dt class="col-sm-2">Email:</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Assigned Project:</dt>
    <dd class="col-sm-10">@Model.Project.Name</dd>
</dl>

<form asp-controller="Employees" asp-action="Delete" asp-route-id="@Model.EmployeeId" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>